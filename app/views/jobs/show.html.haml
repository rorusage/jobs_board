.col-md-4.col-md-offset-4
  %h3{:style => "text-decoration:underline"} #{@job.job_type}
  %h4 Job class       : #{@job.job_class}
  %h4 Company         : #{@job.company}
  %h4 Job Description : #{@job.description}
  %a{:href => "#{@job.link}"} More Info
  %hr
  = link_to("Back", jobs_path, class: "btn btn-primary btn-left")
  - if @job.editable_by?(current_user)
    = link_to("Edit", edit_job_path(@job), class: "btn btn-info")
    = link_to("Delete", job_path(@job), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure"})

